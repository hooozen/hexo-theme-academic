{% extends "_layout.njk" %}
{% block content %}
  <div class="main__content--index main__content">
    <div class="sidebar-outer">
      <div class="sidebar">{% include "_partials/author-overview/index.njk" %}</div>
    </div>
    <div class="main__content-inner">
      {{ partial("_macro/post.njk", { post: page, is_index: true })}}

      {% if theme.selected_work.enable %}
        {% for work in theme.selected_work.list %}
          <div class="selected-work">
            <div class="swork__title">{{work.title}}</div>
            <div class="swork__body">
              {% if work.cover %}
                <div class="swork__cover">
                  {% if work.cover.type == "video" %}
                    <iframe width="100%" height="auto" src={{work.cover.url}} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                  {% else %}
                    <img src={{work.cover.url}}>
                  {% endif %}
                </div>
              {% endif %}
              <a href={{work.url}} class="swork__abstract">{{work.abstract}}</a>
            </div>
            <div class="swork__foot">
              <div class="swork__foot-item">{{work.journal}}</div>
              <div class="swork__foot-item">
                keywords: {{ work.keywords }}
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}

      {% if theme.comments.index %}
        {% include "_partials/comments.njk" %}
      {% endif %}
      {% include "_partials/foot.njk" %}
    </div>
  </div>
{% endblock content %}