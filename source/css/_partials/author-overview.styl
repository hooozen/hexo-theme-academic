@import "../_mixins";

.author-overview-outer {
  display: flex;
  justify-content: flex-end;
}

.author-overview {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.author-face {
  width: 160px;
  height: 160px;
  border-radius: 80px;
  background-size: 160px 160px;
  margin-bottom: 10px;
}

.author-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 1em;
  text-align: center;
  color: $color-font-secondary;
}

.author-name {
  color: $color-primary;
  font-size: 1.75rem;
}

.author-motto {
  font-size: 0.75em;
}

.author-social {
  display: flex;
  justify-content: space-between;
  margin-top: 16px;

  .social-item {
    height: 40px;
    width: 40px;
    margin: 0 10px;
    background-size: 40px;
    cursor: pointer;
    transition: 200ms ease-out;
    &:hover {
      transform: translateY(-3px);
    }
  }
  icon("email", 40, 3);
  icon("scholar", 40, 2);
  icon("institution", 40);
}

