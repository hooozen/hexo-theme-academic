@import '../_mixins';
@import '../_variables';

.selected-work {
  text-align: justify;
  margin: 30px 0;
  overflow: hidden;
}

.swork__body {
  display: flex;

  +tablet-mobile() {
    flex-wrap: wrap;
  }
}

.swork__cover {
  height: 150px;
  flex: 0 0 200px;
  overflow: hidden;
  border-radius: 4px;
  margin-right: 15px;

  +tablet-mobile() {
    margin: 5px;
    flex: 1;
  }
}

.swork__cover-img {
  height: 100%;
  width: 100%;
  background: url() center center / contain no-repeat;
  border: 1px solid #aaa;
  border-radius: 4px;
  box-sizing: border-box;

  &--video {
    @extend .swork__cover-img;
    display: block;
    position: relative;

    &:hover {
      &::after {
        background-size: 60px 60px;
      }
    }

    &::after {
      cursor: pointer;
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.4) url('/images/icon-play.svg') center center / 50px 50px no-repeat;
      transition: all 0.3s ease-out;
    }
  }
}

.swork__head {
  margin: 5px 0;
}

.swork-title {
  font-weight: bold;
  font-size: 1.25em;
}

.swork-journal {
  font-style: italic;
}

.swork__abstract {
  color: inherit;
  height: 150px;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;

  &:hover {
    color: $color-font-secondary;
  }

  &::after {
    position: absolute;
    color: $color-active;
    content: 'Full Text';
    bottom: 0;
    right: 0;
    width: 6em;
    text-align: right;

    @media (prefers-color-scheme: dark) {
      background: linear-gradient(to left, $dark-color-bg, $dark-color-bg 4em, transparent);
    }

    @media (prefers-color-scheme: light) {
      background: linear-gradient(to left, $light-color-bg, $light-color-bg 4em, transparent);
    }
  }

  +tablet-mobile() {
    height: 80px;
  }
}

.swork__foot {
  color: $color-font-secondary;
  margin: 4px 0;
}

.swork__foot-item {
  display: inline-block;
  margin-right: 16px;
}