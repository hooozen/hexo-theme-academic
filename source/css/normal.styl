@import '_variables';

$grey-lighter = #ddd;
$table-border-color = $grey-lighter;
$quote-border-color = $grey-lighter;
$table-odd-line-bg = #fafafa;

html, body {
  margin: 0;
  padding: 0;
}

a {
  color: $link-color;
}

a:hover {
  color: $link-hover-color;
}

blockquote {
  border-left: 4px solid $quote-border-color;
  margin: 0;
  padding-left: 1em;
  color: $black-lighter;
}

iframe, img, video {
  max-width: 100%;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
  font-size: $font-size-small;
  width: 100%;
  margin: 0 0 20px;
}

caption, td, th {
  padding: 8px;
  vertical-align: middle;
  border: 1px solid $table-border-color;
}

caption {
  border: none;
}

th {
  border-bottom-width: 3px;
}

tbody tr:nth-of-type(odd) {
  background: $table-odd-line-bg;
}

figure figcaption {
  text-align: center;
  font-size: $font-size-smaller;
  color: $blak-lighter;
}

p, figure {
  img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
  }
}